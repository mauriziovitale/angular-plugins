{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://json-schema.org/draft-07/schema",
  "title": "Aws pull action",
  "description": "Schema to validate the AWS pull action",
  "type": "object",
  "properties": {
    "AWS_ACCESS_KEY_ID": {
      "type": "string",
      "description": "AWS Access key Id"
    },
    "AWS_SECRET_ACCESS_KEY": {
      "type": "string",
      "description": "AWS Secret access key"
    },
    "AWS_DEFAULT_REGION=": {
      "type": "string",
      "default": "eu-central-1",
      "description": "Default AWS Region"
    },
    "bucket": {
      "type": "string",
      "description": "Bucket path"
    },
    "artifactName": {
      "type": "string",
      "description": "Name of the artifact",
      "alias": "a"
    },
    "outputPath": {
      "type": "string",
      "description": "destination folder of the bundle",
      "alias": "o"
    }
  },
  "required": []
}
