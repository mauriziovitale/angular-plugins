{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular-custom-builders/lite-serve": ["libs/lite-serve/src/index.ts"],
      "@angular-custom-builders/aws-actions": ["libs/aws-actions/src/index.ts"],
      "@angular-custom-builders/licenses": ["libs/licenses/src/index.ts"],
      "@angular-custom-builders/yarn-security": [
        "libs/yarn-security/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
